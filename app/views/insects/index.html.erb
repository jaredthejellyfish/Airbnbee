<div class="results-container">
  <div class="search-bar form-inline">
    <input type="search" id="form1" class="type-bar form-control" placeholder="Type query" aria-label="Search" />
    <button class="button-search" type="submit">Search</button>
  </div>
  <% @insects.each do |insect| %>
    <div class="item-card" id=<%= insect.id %>>
    <% if insect.photo.attached?  %>
      <img img class="item-image"<%= cl_image_tag insect.photo.key %>
    <% else %>
      <a href="insects/<%= insect.id %>"><img class="item-image" src="<%= insect.img_url %>"></a>
    <% end %>
      <div class="item-text">
        <h3 class="item-name"><%= link_to insect.name, insect_path(insect) %></h3>
      </div>
    </div>
  <% end %>
 </div>
